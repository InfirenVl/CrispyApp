<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <corners android:radius="0dp"/> <!-- No rounded corners -->
            <stroke android:width="1dp" android:color="@android:color/transparent"/> <!-- No visible border -->
            <size android:height="1dp"/> <!-- Height to accommodate the underline -->
        </shape>
    </item>
</selector>