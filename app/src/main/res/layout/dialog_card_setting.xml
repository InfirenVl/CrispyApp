<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="700dp"
    android:background="@color/brown_light"
    android:gravity="center"
    android:orientation="vertical"


    android:stateListAnimator="@null"
    app:elevation="0dp">

    <ImageButton
        android:id="@+id/buttonCloseDialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_close"
        android:backgroundTint="@color/sand_light" />

    <TextView
        android:id="@+id/textViewChangeNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/lato_semibold"
        android:gravity="center"
        android:text="Настройки карточки"
        android:textColor="@color/sand_light"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextWorkspaceName"
        style="@style/CustomEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bt_text_alt"
        android:drawableEnd="@drawable/ic_edit_pole"
        android:drawableTint="@color/sand_light"
        android:fontFamily="@font/lato_semibold"
        android:hint="Введите тему карточки"
        android:padding="12dp"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/sand_light"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/timeDeadLine"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corners"

        android:backgroundTint="@color/sand_light"
        android:layout_marginHorizontal="20dp">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/ic_clock"
            />
        <TextView
            android:id="@+id/textTimeLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_semibold"

            android:layout_marginStart="10dp"
            android:text="Настройте срок для задачи"
            android:textColor="@color/brown"
            android:textSize="15sp" />

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/sand_light"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:fontFamily="@font/lato_semibold"
            android:hint="Введите описание карточки"
            android:padding="16dp"
            android:textColor="@color/brown"
            android:textColorHint="@color/brown_light"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete_button"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="Изменить"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="15sp"
            android:backgroundTint="@color/dark_red"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:text="Удалить"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="15sp"
            android:backgroundTint="@color/sand_light"
            android:textColor="@color/brown" />
    </LinearLayout>
    <TextView
        android:id="@+id/textCreatorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="start"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/lato_semibold"
        android:gravity="center"
        android:text="Создано: Романова Мария"
        android:textColor="@color/sand_light"
        android:textSize="20sp" />
</LinearLayout>
