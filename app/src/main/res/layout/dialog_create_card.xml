<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="605dp"
    android:background="@color/brown_light"
    android:gravity="center"
    android:orientation="vertical"


    android:stateListAnimator="@null"
    app:elevation="0dp">

    <ImageButton
        android:id="@+id/buttonCloseDialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_close"
        android:backgroundTint="@color/sand_light" />

    <TextView
        android:id="@+id/textViewChangeNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/lato_semibold"
        android:gravity="center"
        android:text="Создание карточки"
        android:textColor="@color/sand_light"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextWorkspaceName"
        style="@style/CustomEditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bt_text_alt"
        android:drawableEnd="@drawable/ic_edit_pole"
        android:drawableTint="@color/sand_light"
        android:fontFamily="@font/lato_semibold"
        android:hint="Выберите тему карточки"
        android:padding="12dp"
        android:paddingStart="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/sand_light"
        android:textSize="16sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/sand_light"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <EditText
            android:id="@+id/editTextCardDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:fontFamily="@font/lato_semibold"
            android:hint="Введите описание карточки"
            android:padding="16dp"
            android:textColor="@color/brown"
            android:textColorHint="@color/brown_light"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/buttonCreateCard"
        android:layout_width="121dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/sand_light"
        android:fontFamily="@font/inter_regular"
        android:text="Создать"
        android:textColor="@color/brown"
        android:textSize="15sp" />
</LinearLayout>

